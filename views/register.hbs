{{> header }}

<div class="container">
	<br><br><br><br> 
    <h2 style="text-align:center;">Register Form</h2>
    <br>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        {{#if errors}}
          {{#each errors}}
            
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              {{ this }}
            </div>

          {{/each}}
        {{/if}}

        <form method="POST" action="/user/register">
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>UserName</label>
              <input type="text" name="username" value="userme" class="form-control" placeholder="UserName" id="username" data-validation-required-message="Please enter Username">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Email</label>
              <input type="email" name="email" class="form-control" placeholder="Email" id="email"  data-validation-required-message="Please enter the email.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Password</label>
              <input type="password" name="pwd" class="form-control" placeholder="Password" id="password"  data-validation-required-message="Please enter password.">
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div id="success"></div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Register</button>
            <a style="float:right;" href="/user/login" class="text-info" id="sendMessageButton"><b>OR LOGIN</b></a>
          </div>
        </form>
        <a href="/" class="text-info" id="sendMessageButton">Back Home</a>
      </div>
    </div>
  </div>